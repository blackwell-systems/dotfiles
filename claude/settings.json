{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude/hooks/block-dangerous-git.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude/hooks/git-sync-check.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow_bash": true,
    "allow_read": true,
    "allow_write": true,
    "allow_mcp": true
  },
  "preferences": {
    "autoUpdaterStatus": "disabled"
  }
}
