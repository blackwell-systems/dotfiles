{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/blackwell-systems/dotfiles/vault-items.schema.json",
  "title": "Dotfiles Vault Items Configuration",
  "description": "Schema for validating vault-items.json configuration file",
  "type": "object",
  "properties": {
    "vault_location": {
      "type": "object",
      "description": "Where to find/store dotfiles items in the vault backend",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["folder", "vault", "tag", "directory", "prefix", "none"],
          "description": "Location type (backend-specific: folder=Bitwarden, vault/tag=1Password, directory=pass)"
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ],
          "description": "Location identifier (folder name, vault name, directory path, etc.)"
        }
      },
      "required": ["type", "value"]
    },
    "ssh_keys": {
      "type": "object",
      "description": "SSH key mappings (item name → file path)",
      "patternProperties": {
        "^[A-Z][A-Za-z0-9_-]*$": {
          "type": "string",
          "pattern": "^[~/$].*"
        }
      },
      "additionalProperties": false
    },
    "vault_items": {
      "type": "object",
      "description": "Detailed vault item configurations",
      "patternProperties": {
        "^[A-Z][A-Za-z0-9_-]*$": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "pattern": "^[~/$].*",
              "description": "File path (absolute or ~/ relative)"
            },
            "required": {
              "type": "boolean",
              "description": "Whether this item is required for system to function"
            },
            "type": {
              "type": "string",
              "enum": ["file", "sshkey"],
              "description": "Type of vault item"
            }
          },
          "required": ["path", "required", "type"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "syncable_items": {
      "type": "object",
      "description": "Items that can be synced to vault (item name → file path)",
      "patternProperties": {
        "^[A-Z][A-Za-z0-9_-]*$": {
          "type": "string",
          "pattern": "^[~/$].*"
        }
      },
      "additionalProperties": false
    },
    "aws_expected_profiles": {
      "type": "array",
      "description": "List of expected AWS profile names",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "required": [],
  "additionalProperties": false,
  "$defs": {
    "comment": "Allow $schema and $comment for JSON schema validation and documentation"
  },
  "patternProperties": {
    "^\\$": true
  }
}
