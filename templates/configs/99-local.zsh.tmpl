# -----------------------------------------------------------------------------
# Machine Information
# -----------------------------------------------------------------------------
export BLACKDOT_MACHINE_TYPE="{{ machine_type }}"
export BLACKDOT_HOSTNAME="{{ hostname }}"

{{#if (eq machine_type "work") }}
# -----------------------------------------------------------------------------
# Work Machine Configuration
# -----------------------------------------------------------------------------
export WORK_EMAIL="{{ git_email }}"

# Work-specific aliases
alias work="cd {{ workspace }}/work"
{{/if}}

{{#if (eq machine_type "personal") }}
# -----------------------------------------------------------------------------
# Personal Machine Configuration
# -----------------------------------------------------------------------------
alias personal="cd {{ workspace }}/personal"
{{/if}}

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
{{#if aws_profile }}
export AWS_DEFAULT_PROFILE="{{ aws_profile }}"
export AWS_PROFILE="{{ aws_profile }}"
{{/if}}
{{#if aws_region }}
export AWS_DEFAULT_REGION="{{ aws_region }}"
{{/if}}

{{#if bedrock_profile }}
# AWS Bedrock (Claude API)
export AWS_BEDROCK_PROFILE="{{ bedrock_profile }}"
export AWS_BEDROCK_REGION="{{ bedrock_region }}"
{{/if}}

# -----------------------------------------------------------------------------
# Editor Configuration
# -----------------------------------------------------------------------------
export EDITOR="{{ editor }}"
export VISUAL="{{ visual }}"
{{#if pager }}
export PAGER="{{ pager }}"
{{/if}}

# -----------------------------------------------------------------------------
# Custom Paths
# -----------------------------------------------------------------------------
{{#if projects_dir }}
export PROJECTS="{{ projects_dir }}"
alias cproj="cd {{ projects_dir }}"
{{/if}}
{{#if notes_dir }}
export NOTES="{{ notes_dir }}"
alias cnotes="cd {{ notes_dir }}"
{{/if}}

# -----------------------------------------------------------------------------
# GitHub Configuration
# -----------------------------------------------------------------------------
{{#if github_user }}
export GITHUB_USER="{{ github_user }}"
{{/if}}
{{#if github_enterprise_host }}
export GH_ENTERPRISE_HOST="{{ github_enterprise_host }}"
{{#if github_enterprise_user }}
export GH_ENTERPRISE_USER="{{ github_enterprise_user }}"
{{/if}}
{{/if}}

# -----------------------------------------------------------------------------
# Feature Toggles
# -----------------------------------------------------------------------------
{{#if (eq enable_k8s_prompt "true") }}
# Kubernetes prompt enabled
export KUBE_PS1_ENABLED=on
{{/if}}

{{#if (eq enable_aws_prompt "true") }}
# AWS profile in prompt enabled
export AWS_PROMPT_ENABLED=1
{{/if}}

# -----------------------------------------------------------------------------
# SDK Managers (loaded on demand)
# -----------------------------------------------------------------------------
{{#if (eq enable_nvm "true") }}
# NVM (Node Version Manager) - lazy loaded
export NVM_DIR="$HOME/.nvm"
nvm() {
    unset -f nvm
    [ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"
    nvm "$@"
}
{{/if}}

{{#if (eq enable_pyenv "true") }}
# pyenv - lazy loaded
if command -v pyenv >/dev/null 2>&1; then
    export PYENV_ROOT="$HOME/.pyenv"
    export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init --path)"
fi
{{/if}}

{{#if (eq enable_rbenv "true") }}
# rbenv - lazy loaded
if command -v rbenv >/dev/null 2>&1; then
    eval "$(rbenv init -)"
fi
{{/if}}

{{#if (eq enable_sdkman "true") }}
# SDKMAN (Java) - lazy loaded
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$SDKMAN_DIR/bin/sdkman-init.sh" ]] && source "$SDKMAN_DIR/bin/sdkman-init.sh"
{{/if}}

