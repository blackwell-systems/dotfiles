#compdef awslogin
# ZSH completion for awslogin command

_awslogin() {
  local -a profiles
  profiles=($(aws configure list-profiles 2>/dev/null))

  if [[ ${#profiles[@]} -eq 0 ]]; then
    _message "no AWS profiles configured"
    return 1
  fi

  _describe 'AWS profile' profiles
}

_awslogin "$@"
